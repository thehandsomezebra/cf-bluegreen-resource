  local value2="some_value2"

  local project=$(create_static_app "$app_name")

  local params=$(jq -n \
  --arg org "$org" \
  --arg space "$space" \
  --arg app_name "$app_name" \
  --arg path "$project/content" \
  --arg key1 "$key1" \
  --arg value1 "$value1" \
  --arg key2 "$key2" \
  --arg value2 "$value2" \
  '{
    command: "push",
    org: $org,
    space: $space,
    app_name: $app_name,
    path: $path,
    environment_variables: {
      ($key1): $value1,
      ($key2): $value2
