  assert::success cf::has_env "$app_name" "$key2" "$value2"
}

it_can_push_an_app_with_stack() {
  local org=${1:?org null or not set}
  local space=${2:?space null or not set}
  local app_name=${3:?app_name null or not set}
  local stack=${4:?stack null or not set}

  local project=$(create_static_app "$app_name")

  local params=$(jq -n \
  --arg org "$org" \
  --arg space "$space" \
  --arg app_name "$app_name" \
  --arg stack "$stack" \
  --arg path "$project/content" \
  --arg manifest "$project/manifest.yml" \
  '{
    command: "push",
    org: $org,
    space: $space,
    app_name: $app_name,
    path: $path,
    manifest: $manifest,
    stack: $stack
  }')

  put_with_params "$CCR_SOURCE" "$params" | jq -e '.version | keys == ["timestamp"]'

  assert::success cf::is_app_started "$app_name"
  assert::equals "$stack" "$(cf::get_app_stack "$app_name")"
}

it_can_push_an_app_with_multiple_buildpacks() {
  local org=${1:?org null or not set}
  local space=${2:?space null or not set}
  local app_name=${3:?app_name null or not set}

  local project=$(create_static_app "$app_name")

  local params=$(jq -n \
  --arg org "$org" \
  --arg space "$space" \
  --arg app_name "$app_name" \
  --arg path "$project/content" \
  --arg manifest "$project/manifest.yml" \
  '{
    command: "push",
    org: $org,
    space: $space,
    app_name: $app_name,
    path: $path,
    manifest: $manifest,
    buildpacks: [
      "binary_buildpack",
      "staticfile_buildpack"
    ]
  }')

  put_with_params "$CCR_SOURCE" "$params" | jq -e '.version | keys == ["timestamp"]'

  assert::success cf::is_app_started "$app_name"
  assert::equals "binary_buildpack,staticfile_buildpack" "$(cf::get_app_buildpacks "$app_name")"
}

it_can_push_an_app_with_deprecated_buildpack_param() {
  local org=${1:?org null or not set}
  local space=${2:?space null or not set}
  local app_name=${3:?app_name null or not set}

  local project=$(create_static_app "$app_name", "---
applications:
- name: $app_name
  memory: 64M
  disk_quota: 64M
  path: content")

  local params=$(jq -n \
  --arg org "$org" \
  --arg space "$space" \
  --arg app_name "$app_name" \
  --arg path "$project/content" \
  --arg manifest "$project/manifest.yml" \
  '{
    command: "push",
    org: $org,
    space: $space,
    app_name: $app_name,
    path: $path,
    manifest: $manifest,
    buildpack: "staticfile_buildpack"
  }')

  put_with_params "$CCR_SOURCE" "$params" | jq -e '.version | keys == ["timestamp"]'

  assert::success cf::is_app_started "$app_name"
  assert::equals "staticfile_buildpack" "$(cf::get_app_buildpacks "$app_name")"
}

org=$(generate_test_name_with_spaces "Org")
space=$(generate_test_name_with_spaces "Space")

login

setup_integration_tests "$org" "$space"

cf::target "$org" "$space"

describe "push using rolling strategy"
{
  if ! cf::is_cf7; then
    echo "skipping test for cf cli v6"
  else
    app_name=$(generate_test_name_with_spaces "App")

    run it_can_push_an_app_using_no_strategy \"$org\" \"$space\" \"$app_name\"
    run it_can_push_an_app_using_rolling_strategy \"$org\" \"$space\" \"$app_name\"
    run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
  fi
}

describe "show logs on a failed push"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_show_logs_on_a_failed_push \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with a startup command"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_startup_command \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with vars"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_vars \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with vars files"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_vars_files \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with environment variables using a manifest"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_env_vars_with_manifest \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with environment variables without using a manifest"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_env_vars_without_manifest \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with stack"
{
  app_name=$(generate_test_name_with_spaces "App")
  stack=cflinuxfs3

  run it_can_push_an_app_with_stack \"$org\" \"$space\" \"$app_name\" \"$stack\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with multiple buildpacks"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_multiple_buildpacks \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

describe "push an app with deprecated buildpack param"
{
  app_name=$(generate_test_name_with_spaces "App")

  run it_can_push_an_app_with_deprecated_buildpack_param \"$org\" \"$space\" \"$app_name\"
  run it_can_delete_an_app \"$org\" \"$space\" \"$app_name\"
}

teardown_integration_tests "$org" "$space"
